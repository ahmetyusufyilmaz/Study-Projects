@model IEnumerable<School_DbFirst.Models.Ogrenci>

@{
    ViewBag.Title = "Index";
    ViewBag.searchUrl = "/Ogrenci/Search";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.LabelForModel("Öğretmen Ad-Soyad")
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Ad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Soyad)
    </td>
    <td>
       <p>@item.Ogretmen.Ad @item.Ogretmen.Soyad </p>
    </td>
    
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
